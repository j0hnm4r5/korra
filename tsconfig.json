{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "lib": ["esnext"],
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "dist",
    "rootDir": "src",
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strict": true,
    "removeComments": true,
    "baseUrl": "types",
    "typeRoots": [
      "types"
    ],
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "test"]
}
